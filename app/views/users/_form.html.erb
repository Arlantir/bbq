<%= form_with(model: @user, local: true, html: { multipart: true }) do |f| %>

  <%= render partial: 'partials/form_errors', locals: {model: @user} %>

  <div class="form-group">
    <%= f.label :name, class: 'font-weight-bold' %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :email, class: 'font-weight-bold' %>
    <%= f.text_field :email, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :avatar, class: 'font-weight-bold' %>
    <p><%= image_tag(@user.avatar.thumb.url) if @user.avatar? %></p>
    <%= f.file_field :avatar, class: 'form-control-file' %>
  </div>

  <div class="actions">
    <%= f.submit t('.submit'), class: 'btn btn-outline-primary' %> или <%= link_to t('.back'), :back %>
  </div>
<% end %>
