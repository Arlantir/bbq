<div class="row">
  <div class="col-lg-4 col-sm-6 col-6">

    <h2><%= t('.header') %></h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render partial: 'partials/form_errors', locals: {model: @user} %>
      <%= f.hidden_field :reset_password_token %>

      <div class="form-group">
        <%= f.label :password, class: 'font-weight-bold' %><br />
        <% if @minimum_password_length %>
          <em>(<%= t('.pas_length_one') %> <%= @minimum_password_length %> <%= t('.pas_length_two') %>)</em><br />
        <% end %>
        <%= f.password_field :password, autofocus: true, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, class: 'font-weight-bold' %><br />
        <%= f.password_field :password_confirmation, class: 'form-control' %>
      </div>

      <div class="actions">
        <%= f.submit t('.submit'), class: 'btn btn-outline-primary' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
