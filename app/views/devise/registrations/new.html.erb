<div class="row">
  <div class="col-lg-4 col-sm-6 col-6">

    <h2>Регистрация</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render partial: 'partials/form_errors', locals: {model: @user} %>

      <div class="form-group">
        <%= f.label :email, class: 'font-weight-bold' %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :password, class: 'font-weight-bold' %>
        <% if @minimum_password_length %>
        <em>(Не менее <%= @minimum_password_length %> символов)</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, class: 'font-weight-bold' %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class:
            'form-control' %>
      </div>

      <div class="actions">
        <%= f.submit t('helpers.submit.sign_up'), class: 'btn btn-outline-primary' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
