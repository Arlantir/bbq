<div class="row">
  <div class="col-lg-4 col-sm-6 col-6">

    <h2>Сменить пароль</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {method: :put}) do |f| %>
      <%= render partial: 'partials/form_errors', locals: {model: @user} %>

      <div class="form-group">
        <%= f.label :email, class: 'font-weight-bold' %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="form-group">
        <%= f.label :password, class: 'font-weight-bold' %>
        <% if @minimum_password_length %>
          <em>(Не менее <%= @minimum_password_length %> символов)</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
        <small class="form-text text-muted">(оставте пустым, если не хотите его менять)</small>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, class: 'font-weight-bold' %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :current_password, class: 'font-weight-bold' %>
        <%= f.password_field :current_password, autocomplete: "current-password", class: 'form-control' %>
        <small class="form-text text-muted">(текущий пароль для подтверждения изменений)</small>
      </div>

      <div class="actions">
        <%= f.submit t('helpers.submit.update'), class: 'btn btn-outline-primary' %>
      </div>
    <% end %>

    <%= button_to t('helpers.submit.delete_account'), registration_path(resource_name), data: {confirm: t('helpers.data_confirm')},
                  class: 'btn btn-outline-danger buffer-both', method: :delete %>

    <%= link_to t('views.users.back'), :back %>

  </div>
</div>
