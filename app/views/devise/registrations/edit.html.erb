<div class="row">
  <div class="col-lg-4 col-sm-6 col-6">

    <h2>Сменить пароль</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {method: :put}) do |f| %>
      <%= render partial: 'partials/form_errors', locals: {model: @user} %>

      <div class="form-group">
        <%= f.label :email, class: 'font-weight-bold' %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="form-group">
        <%= f.label :password, 'Пароль', class: 'font-weight-bold' %>
        <% if @minimum_password_length %>
          <em>(Не менее <%= @minimum_password_length %> символов)</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
        <small class="form-text text-muted">(оставте пустым, если не хотите его менять)</small>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, 'Подтверждение пароля', class: 'font-weight-bold' %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :current_password, 'Текущий пароль', class: 'font-weight-bold' %>
        <%= f.password_field :current_password, autocomplete: "current-password", class: 'form-control' %>
        <small class="form-text text-muted">(текущий пароль для подтверждения изменений)</small>
      </div>

      <div class="actions">
        <%= f.submit "Обновить", class: 'btn btn-outline-primary' %>
      </div>
    <% end %>

    <h3 class="buffer-both">Удалить аккаунт</h3>

    <p><%= button_to "Удалить аккаунт", registration_path(resource_name), data: {confirm: "Вы уверены?"},
                     class: 'btn btn-outline-danger', method: :delete %></p>

    <%= link_to "Назад", :back %>

  </div>
</div>
