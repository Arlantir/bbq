<h1><%= t('.header') %></h1>

<%= form_tag('', method: 'post') do |f| %>
  <div class="form-group">
    <%= label :pincode, t('.label'), class: 'font-weight-bold' %>
    <%= text_field_tag :pincode, params[:pincode], class: 'form-control' %>
  </div>

  <div class="actions">
    <%= submit_tag(t('.submit'), :class=>"btn btn-outline-primary") %>
  </div>
<% end %>

<%= link_to t('.back'), events_path %>